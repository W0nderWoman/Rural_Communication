<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="4dp"
    android:background="@drawable/problem_background"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Problem"
        android:id="@+id/problem_title_text_view"
        android:textSize="16sp"
        android:layout_margin="4dp"
        android:fontFamily="@font/kid_kosmic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="DATE:"
            android:fontFamily="@font/kid_kosmic"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Problem"
            android:id="@+id/problem_date_text_view"
            android:fontFamily="@font/kid_kosmic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="STATUS:"
            android:fontFamily="@font/kid_kosmic"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Problem"
            android:id="@+id/problem_status_text_view"
            android:fontFamily="@font/kid_kosmic"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/xpressive_bold"
        android:text="Problem"
        android:visibility="gone"
        android:layout_margin="4dp"
        android:id="@+id/problem_description_text_view"
        android:textColor="@android:color/black"
        />
</LinearLayout>