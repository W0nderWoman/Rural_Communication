<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.gupta.ruralcommunication.DevelopmentFragment.View.DevelopmentStatsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:lottie_fileName="building.json"
                android:id="@+id/infrastructure_animation"
                app:lottie_loop="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Infrastructure"
                android:textColor="@android:color/black"
                android:fontFamily="@font/kid_kosmic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="Schools Build in year 2015-16: 1"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="Hospitals Build in year 2015-16: 0"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Toilets Build in year 2015-16: 32"
                android:fontFamily="monospace"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:lottie_fileName="atm_link.json"
                android:id="@+id/finance_animation"
                app:lottie_loop="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Finance and employment"
                android:textColor="@android:color/black"
                android:fontFamily="@font/kid_kosmic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="People employed in year 2015-16 under MNREGA: 103"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="Net GDP in year 2015-16 includeing funds: 2.5 cr"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Poverty % drop in year 2015-16: 1.3"
                android:fontFamily="monospace"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                app:lottie_fileName="cycle_animation.json"
                android:id="@+id/transport_animation"
                app:lottie_loop="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Roads and Transportation"
                android:textColor="@android:color/black"
                android:fontFamily="@font/kid_kosmic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="Roads (km) Build in year 2015-16: 34"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:text="Bus Stops Build in year 2015-16: 3"
                android:fontFamily="monospace"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="NHs Build in year 2015-16: 0"
                android:fontFamily="monospace"
                android:layout_margin="8dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
